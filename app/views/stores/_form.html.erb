<% if store.errors.any? %>
	<%= render "shared/errors", object: store %>
<% end %>

<%= form_for(store) do |f| %>

	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :number %>
	<%= f.number_field :number %>

	<%= f.label :region %>
	<%= f.collection_select(:region_id, Region.all, :id, :name, prompt: true) %>

	<%= f.submit "#{action} Store" %>
	
<% end %>
